<% if flash[:notice] %>
  <div class="row">
    <div class="col-sm-12">
      <div class="alert alert-info" role="alert">
        <span class=""><%= flash[:notice] %></span>
      </div>
    </div>
  </div>
<% elsif flash[:success] %>
  <div class="row">
    <div class="col-sm-12">
      <div class="alert alert-success" role="alert">
        <span class=""><%= flash[:success] %></span>
      </div>
    </div>
  </div>
<% elsif flash[:alert] %>
  <div class="row">
    <div class="col-sm-12">
      <div class="alert alert-warning" role="alert">
        <span class=""><%= flash[:alert] %></span>
      </div>
    </div>
  </div>
<% elsif flash[:error] %>
  <div class="row">
    <div class="col-sm-12">
      <div class="alert alert-danger" role="alert">
        <span class=""><%= flash[:error] %></span>
      </div>
    </div>
  </div>
<% end %>
